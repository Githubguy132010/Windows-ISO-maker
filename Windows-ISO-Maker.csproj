&lt;Project Sdk="Microsoft.NET.Sdk">

  &lt;PropertyGroup>
    &lt;OutputType>WinExe&lt;/OutputType>
    &lt;TargetFramework>net7.0-windows10.0.19041.0&lt;/TargetFramework>
    &lt;Nullable>enable&lt;/Nullable>
    &lt;UseWPF>true&lt;/UseWPF>
    &lt;ApplicationManifest>app.manifest&lt;/ApplicationManifest>
    &lt;Version>1.0.0&lt;/Version>
    &lt;Authors>Your Name&lt;/Authors>
    &lt;Company>Your Company&lt;/Company>
    &lt;Product>Windows ISO Maker&lt;/Product>
    &lt;Description>A tool for customizing Windows ISO files with drivers and settings&lt;/Description>
    &lt;Copyright>Copyright © $([System.DateTime]::Now.Year)&lt;/Copyright>
    &lt;PublishSingleFile>true&lt;/PublishSingleFile>
    &lt;SelfContained>true&lt;/SelfContained>
    &lt;RuntimeIdentifier>win-x64&lt;/RuntimeIdentifier>
    &lt;IncludeNativeLibrariesForSelfExtract>true&lt;/IncludeNativeLibrariesForSelfExtract>
    &lt;EnableCompressionInSingleFile>true&lt;/EnableCompressionInSingleFile>
    &lt;DebugType>embedded&lt;/DebugType>
  &lt;/PropertyGroup>

  &lt;ItemGroup>
    &lt;PackageReference Include="WPF-UI" Version="3.0.0-preview.4" />
    &lt;PackageReference Include="Microsoft.WindowsAPICodePack-Shell" Version="1.1.0" />
    &lt;PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    &lt;PackageReference Include="System.Management.Automation" Version="7.3.6" />
    &lt;PackageReference Include="Microsoft.PowerShell.SDK" Version="7.3.6" />
  &lt;/ItemGroup>

  &lt;ItemGroup>
    &lt;EmbeddedResource Include="Resources\oscdimg.zip" />
    &lt;EmbeddedResource Include="Resources\pwsh.zip" />
  &lt;/ItemGroup>

&lt;/Project>